{
  "nodeModulesDir": "auto",
  "unstable": ["fmt-component"],
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview",
    "lint": "deno run -A npm:@biomejs/biome check ./src ./scripts",
    "format": "deno run -A npm:@biomejs/biome format --write ./src ./scripts",
    "purge:report": "deno run -A ./scripts/purgecss.ts",
    "check": "deno run -A npm:svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "deno run -A npm:svelte-check --tsconfig ./tsconfig.json --watch",
    "validate": "deno task lint && deno task check && deno task build",
    "catalog:audit": "deno run --allow-read --unstable-sloppy-imports ./scripts/audit-catalog.ts",
    "build:sprite": "deno run --allow-read --allow-write ./scripts/build-sprite.ts",
    "test": "deno test --allow-read ./src"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true
  },
  "imports": {
    "$lib/": "./src/lib/",
    "diff": "npm:diff@^5.1.0",
    "zod": "npm:zod@^3.23.0",
    "svelte": "npm:svelte@^5",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^4",
    "svelte-check": "npm:svelte-check@^4",
    "autoprefixer": "npm:autoprefixer@^10.4.20",
    "postcss": "npm:postcss@^8.4.49"
  }
}
