{
  "nodeModulesDir": "auto",
  "unstable": ["fmt-component"],
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview",
    "lint": "deno run -A npm:@biomejs/biome check ./src ./scripts",
    "format": "deno run -A npm:@biomejs/biome format --write ./src ./scripts",
    "build:sprite": "deno run --allow-read --allow-write ./scripts/build-sprite.ts",
    "test": "deno test --allow-read ./src"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true
  },
  "imports": {
    "diff": "npm:diff@^5.1.0",
    "zod": "npm:zod@^3.23.0",
    "svelte": "npm:svelte@^5",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^4"
  }
}